{% extends 'base.html.twig' %}

{% block card %}
    <h1>Classe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ classe.libelle }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if classe.created %}{{ classe.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if classe.updated %}{{ classe.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_classe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_classe_edit', { 'id': classe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
